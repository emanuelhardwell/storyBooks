<div class="container mt-4">
    <div class="row mb-2">
        <div class="col-md-12 mx-auto">
            <div class="card bg-warning">
                <div class="card-body">
                    <h5 class="text-center">My Stories</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card">
                <div class="card-body">
                    {{#if stories}}
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <td>Title</td>
                                <td>Description</td>
                                <td>Status</td>
                                <td>Date</td>
                                <td>Actions</td>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each stories}}
                            <tr>
                                <td>{{title}}</td>
                                <td>{{body}}</td>
                                <td>{{status}}</td>
                                <td>{{ timeago createdAt}}</td>
                                <td>
                                    <a href="/stories/edit/{{_id}}" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="/stories/delete/{{_id}}" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    {{else}}
                    <div class="card mx-auto bg-warning">
                        <div class="card-body">
                            <p class="lead text-center">There are not stories yet.</p>
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>